generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
}

enum MovementType {
  INCOME
  EXPENSE
}

model User {
  id        String     @id @default(uuid())
  name      String?
  email     String     @unique
  phone     String?
  role      Role       @default(ADMIN) // IMPORTANT: new users default to ADMIN for the test
  movements Movement[] 

  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
}

model Movement {
  id        String       @id @default(uuid())
  amount    Decimal
  concept   String
  date      DateTime
  type      MovementType
  user      User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String

  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt
}